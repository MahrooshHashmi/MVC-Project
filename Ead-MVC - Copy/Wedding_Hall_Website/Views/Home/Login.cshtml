@model  Ead_MVC.Models.User

<section class="title">
    <div class="login-head">
        <div class="container">
            <div class="row">
                <div class="listing-head">
                    <h1 class="page-title">Login</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container">
    <div class="row form-title">
        <h2><span>Login</span></h2>
    </div>
    <div class="col-md-8 col-md-offset-2">
        <div class="">

            <div class="">
               @using (Html.BeginForm("VerifyLogin", "Home", FormMethod.Post, new {@class = "form-horizontal", style = "max-width: 630px;"}))
               {
                   <div class="form-group">
                       @Html.LabelFor(u => u.Email, new {@class = "col-md-4 control-label"})
                       <div class="col-md-6">
                           @Html.TextBoxFor(u => u.Email, new {@class = "form-control"})
                       </div>
                   </div>

                   <div class="form-group">
                       @Html.LabelFor(u => u.Password, new {@class = "col-md-4 control-label"})
                       <div class="col-md-6">
                           @Html.TextBoxFor(u => u.Password, new {@class = "form-control"})
                           <button type="submit" class="btn btn-primary" style="float:left;width: 120px;margin-top: 8px;">
                               Login
                           </button>
                           @Html.ActionLink("Forgot Your Password?","ForgotPassword","Home",new {@class="btn-link", style="float:right;"})
                           
                       </div>
                   </div>



                   <div class="form-group">
                       <div class="col-md-8 col-md-offset-4">
                           <button class="btn btn-primary" onclick="window.location.href = 'customer.html'" data-wow-delay="0.5s" style="width:100%;max-width: 303px;margin-top: 0px;">Register as Customer</button>

                       </div>
                       <div class="col-md-4 col-md-offset-4">

                       </div>
                   </div>

               }
            </div>
        </div>
    </div>
</div>


